<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Outfits</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        nav {
            background-color: #333;
            color: #fff;
            padding: 10px 0;
            text-align: center;
        }

        nav ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
        }

        nav ul li {
            display: inline;
            margin-right: 20px;
        }

        nav ul li a {
            text-decoration: none;
            color: #fff;
            font-size: 18px; 
            font-weight: bold; 
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; 
        }

        nav ul li a:hover {
            color: #8ba3dd;
        }

        nav ul li a.active {
            color: #8ba3dd;
            text-decoration: underline;
        }
        
        .container {
            margin-top: 20px;
        }
        
        .table {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <!-- Navigation bar -->
    <nav>
        <ul>
            <li><a href="/weather">Weather</a></li>
            <li><a href="/searchbar">Search Bar</a></li>
            <li><a href="/graph">Graph</a></li>
            <li><a href="/apparel">Apparel</a></li>
            <li><a href="/outfits" class="active">Outfits</a></li>
        </ul>
    </nav>

    <div class="container">
        <h1>Outfits</h1>
        <div style="overflow-x:auto;">
            <table id="outfitsTable" class="table table-dark">
                <thead>
                    <tr>
                        <th>Season</th>
                        <th>Date Created</th>
                        <th>User ID</th>
                        <th>Apparel ID</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Table body content will be added dynamically -->
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
        // Fetch outfits data from the server
        $(document).ready(function() {
            $.ajax({
                url: '/api/outfits',
                type: 'GET',
                success: function(response) {
                    // Iterate through each outfit and append to table
                    response.forEach(function(outfit) {
                        var row = `<tr>
                            <td>${outfit.Season}</td>
                            <td>${outfit.Datecreated}</td>
                            <td>${outfit.user_id}</td>
                            <td>${outfit.apparelID}</td>
                        </tr>`;
                        $('#outfitsTable tbody').append(row);
                    });
                },
                error: function(xhr, status, error) {
                    console.error('Error fetching outfits:', error);
                }
            });
        });
    </script>
</body>
</html>
